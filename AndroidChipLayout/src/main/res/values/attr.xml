<?xml version="1.0" encoding="utf-8"?>

<resources>
    <declare-styleable name="chipLayout">
        <attr name="android:gravity" />
    </declare-styleable>
    <declare-styleable name="chipLayout_Layout">
        <attr name="android:layout_gravity" />
    </declare-styleable>

    <declare-styleable name="chip_layout">
        <attr name="textSize_" format="dimension"/>
        <attr name="chipPadding_" format="dimension"/>
        <attr name="chipPaddingLeft_" format="dimension"/>
        <attr name="chipPaddingRight_" format="dimension"/>
        <attr name="chipPaddingTop_" format="dimension"/>
        <attr name="chipPaddingBottom_" format="dimension"/>
        <attr name="chipTextPadding_" format="dimension"/>
        <attr name="chipTextPaddingLeft_" format="dimension"/>
        <attr name="chipTextPaddingRight_" format="dimension"/>
        <attr name="chipTextPaddingTop_" format="dimension"/>
        <attr name="chipTextPaddingBottom_" format="dimension"/>
        <attr name="textColor_" format="color" />
        <attr name="chipColor_" format="color" />
        <attr name="showText_" format="boolean" />
        <attr name="hint_" format="string" />
        <attr name="showDeleteButton_" format="boolean" />
        <attr name="deleteIcon_" format="reference" />
        <attr name="chipDrawable_" format="reference" />
        <attr name="chipLayoutDrawable_" format="reference" />
        <attr name="labelPosition_" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>

</resources>